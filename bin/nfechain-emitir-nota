#/bin/shell

function prop {
  grep "${1}" /etc/nfechain/nfechain.properties|cut -d'=' -f2
}

#$1 emitente
#$2 favorecido
#$3 valor
#$4 address

multichain-cli $(prop 'nfechain.chainname') -rpcuser="$(prop 'nfechain.username')" -rpcpassword="$(prop 'nfechain.password')" sendasset $2 ativo_1 $1

echo 'Envio de recibo realizado com sucesso'

